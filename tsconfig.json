{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@basalang/shared": ["packages/shared"],
      "@/*": ["frontend/*"]
    }
  },
  "references": [    
    { "path": "packages/shared" }
  ],
  "exclude": ["node_modules", "dist"]
}
